<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:vm="clr-namespace:RestaurantApp.ViewModel"
             x:Class="RestaurantApp.MainPage" NavigationPage.HasNavigationBar="False">

    <ContentPage.BindingContext>
        <vm:MainViewModel x:Name="vm"/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
         <Grid RowDefinitions="*,2,Auto" BackgroundColor="Red">
        <BoxView Grid.RowSpan="3">
            <BoxView.Background>
                <LinearGradientBrush>
                    <GradientStopCollection>
                        <GradientStop Color="LightYellow" Offset="0"/>
                        <GradientStop Color="#393837" Offset="1"/>
                    </GradientStopCollection>
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>
        <Grid>
            <Image Source=" menu" WidthRequest="20" HeightRequest="20" HorizontalOptions="Start" VerticalOptions="Start" Margin="25"/>
            <Image Source="search" WidthRequest="20" HeightRequest="20" HorizontalOptions="End" VerticalOptions="Start" Margin="25"/>
        </Grid>
        <StackLayout Grid.Row="1" HorizontalOptions="Center" Margin="0,-860,0,0" Spacing="30">
            <Grid HeightRequest="210" WidthRequest="210" HorizontalOptions="Center">
                <Ellipse Stroke="Violet "  StrokeThickness="2" Aspect="Fill"/> 
                <Image x:Name="BannerImage" Source="Lunch" HeightRequest="195" WidthRequest="195" HorizontalOptions="Center"
                       VerticalOptions="Center"/>
            </Grid>
            <StackLayout HorizontalOptions="Center" Spacing="15">
                <Label Text="Are you hungery?" TextColor="White" FontSize="18" HorizontalOptions="Center"/>
                <Label Text="Dont wait" TextColor="White" FontSize="45" FontAttributes="Bold" HorizontalOptions="Center"/>
                <Button Text="Order Now " TextColor="black" BackgroundColor="yellow" WidthRequest="150" HeightRequest="46"
                        CornerRadius="23" HorizontalOptions="Center" Command="{Binding OrderCommand}"/>

            </StackLayout>
        </StackLayout>
        <StackLayout Grid.Row="2" Margin=" 125,10,0,25" Spacing="10">
            <Label Text="QUICK PICK" TextColor="DarkViolet" Opacity="0.5" FontSize="30"/>
            <ScrollView Orientation="Horizontal" HorizontalScrollBarVisibility="Never">
                <StackLayout Orientation="Horizontal" BindableLayout.ItemsSource="{Binding Picks}" Spacing="100">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="Auto,Auto" ColumnSpacing="15">
                                <Rectangle Fill="#C0C0C0"  VerticalOptions="Center" WidthRequest="100" HeightRequest="100"/>
                                <Image Source="{Binding Image}" WidthRequest="155" HeightRequest="125" HorizontalOptions="Center" VerticalOptions="Center"/>
                                  <StackLayout Grid.Column="1" Spacing="10" WidthRequest="115">
                                      <Label Text="{Binding Title}" TextColor="White" FontSize="22" FontAttributes="Bold"/>
                                      <Label Text="{Binding Description}" TextColor="White" FontSize="20"/>

                                  </StackLayout>        
                            </Grid>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>


            </ScrollView>

        </StackLayout>
    </Grid>
    </ContentPage.Content>
   

</ContentPage>
